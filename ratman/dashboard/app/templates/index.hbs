{{page-title (t 'index.title')}}

<h2>{{t 'index.placeholder.heading'}}</h2>
<p>{{t 'index.placeholder.greeting'}}</p>
<ul>
  <table class="table">
    <tbody>
    {{#each @model.addrs as |addr|}}
      <tr>
        <td>{{#if addr.isLocal}}{{t 'addr.is_local'}}{{/if}}</td>
        <td>{{addr.id}}</td>
        <td class="peer-data peer-data-up">↑ {{addr.metricBytesSent}}</td>
        <td class="peer-data peer-data-down">↓ {{addr.metricBytesRecv}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</ul>
